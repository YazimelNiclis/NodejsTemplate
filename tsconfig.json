{
  "compilerOptions": {
    "outDir": "./dist",                          
    "rootDir": "./",
    "module": "commonjs",
    "noImplicitAny": true,
    "allowJs": true,
    "esModuleInterop": true,
    "target": "es5", 
    "lib": ["es6"], 
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots" : ["./node_modules/@types", "./typings"],
    "downlevelIteration": true
  },
  "include": ["./src/**/*", "app.ts"],
  "resolveJsonModule": true,
  "exclude": ["node_modules"]
}
